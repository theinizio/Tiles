<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="281dp" >
    
    <ImageView
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/title" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:onClick="openGameAvtivity"
        android:background="@null"
        android:src="@drawable/play_custom" />
    
	 <ImageButton
        android:id="@+id/highscoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/playButton"
        android:onClick="openHighscores"
        android:background="@null"
        android:src="@drawable/highscores_custom" />
	
    <ImageButton
        android:id="@+id/how2PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/highscoresButton"
        android:background="@null"
        android:onClick="openHow2PLay"
        android:src="@drawable/how_2_play_custom" />

    <ImageButton
        android:id="@+id/soundBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:onClick="toggleSound"
        android:background="@null"
        android:src="@drawable/soundoff" />

    <Button
        android:id="@+id/button1"
        android:layout_width="127dp"
        android:layout_height="26dp"
        android:text="Play"
        android:background="@drawable/button_bg"
        android:shadowColor="#ffffff"
        android:layout_above="@+id/playButton"
        android:layout_alignRight="@+id/playButton"
        android:textColor="@drawable/button_text_bg"
        android:textStyle="bold"
        android:textSize="21dp"
        android:onClick="openGameAvtivity" />
   
</RelativeLayout><!-- From: file:/B:/AndroidstudioProjects/Tiles/app/src/main/res/layout/main.xml -->